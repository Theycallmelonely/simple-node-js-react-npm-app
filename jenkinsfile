pipeline {
    agent {
        docker {
            image 'node:20'   // یا هر نسخه‌ی دلخواه
            args '-u root:root' // در صورت نیاز به دسترسی روت
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Theycallmelonely/simple-node-js-react-npm-app.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deploy stage here'
            }
        }
    }
}
